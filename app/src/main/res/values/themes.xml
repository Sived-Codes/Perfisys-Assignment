<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SplitifyAssignment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>


    <style name="Base.Theme.MarghAssignment" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.SplitifyAssignment" parent="Base.Theme.SplitifyAssignment" />

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/primary</item>
    </style>

    <style name="BottomNavigationTextStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>